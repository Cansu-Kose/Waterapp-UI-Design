<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="cardBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>

    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="AppTheme.Picker2" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">#FF4593</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="mythimepickerstyle" parent="@android:style/Widget.Material.Light.TimePicker" >
        <item name="android:textColorPrimary">#FF4593</item>
        <item name="android:textSize">22sp</item>

    </style>

    <style name="mythimepickerstyle2" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textSize">24sp</item>

    </style>


</resources>